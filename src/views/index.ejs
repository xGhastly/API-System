<%- include('includes/head'); %>

    <!-- Cabeçalho -->
    <%- include('includes/nav'); %>
    <!-- Conteúdo Principal -->
    <main class="container mt-5">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h1>Sistema Parking Novo Horizonte</h1>
                <p>Bem-vindo ao sistema. Aqui você pode gerenciar veículos, funcionários e o estacionamento com eficiência.</p>
            </div>
        </div>

        <!-- Cartões de Acesso Rápido -->
        <div class="row text-center">
            <!-- Cartão de Veículos -->
            <div class="col-md-4 mb-4">
                <div class="card shadow-lg">
                    <div class="card-body">
                        <i class="fas fa-car fa-3x mb-3 text-primary"></i>
                        <h5 class="card-title">Veículos</h5>
                        <p class="card-text">Gerencie os veículos que acessam o estacionamento.</p>
                        <a href="veiculos.html" class="btn btn-primary">Acessar</a>
                    </div>
                </div>
            </div>

            <!-- Cartão de Funcionários -->
            <div class="col-md-4 mb-4">
                <div class="card shadow-lg">
                    <div class="card-body">
                        <i class="fas fa-users fa-3x mb-3 text-success"></i>
                        <h5 class="card-title">Funcionários</h5>
                        <p class="card-text">Visualize e gerencie os funcionários da empresa.</p>
                        <a href="funcionarios.html" class="btn btn-success">Acessar</a>
                    </div>
                </div>
            </div>

            <!-- Cartão de Estacionamento -->
            <div class="col-md-4 mb-4">
                <div class="card shadow-lg">
                    <div class="card-body">
                        <i class="fas fa-parking fa-3x mb-3 text-warning"></i>
                        <h5 class="card-title">Estacionamento</h5>
                        <p class="card-text">Controle as vagas e o status do estacionamento.</p>
                        <a href="#" class="btn btn-warning">Acessar</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Painel de Resumo -->
        <div class="row mt-5">
            <div class="col-12">
                <h3>Resumo do Sistema</h3>
                <div class="row">
                    <div class="col-md-4">
                        <div class="info-box bg-primary text-white p-3 mb-3">
                            <i class="fas fa-car fa-2x"></i>
                            <span class="ml-3">Total de Veículos: 120</span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="info-box bg-success text-white p-3 mb-3">
                            <i class="fas fa-users fa-2x"></i>
                            <span class="ml-3">Total de Funcionários: 45</span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="info-box bg-warning text-white p-3 mb-3">
                            <i class="fas fa-parking fa-2x"></i>
                            <span class="ml-3">Vagas Disponíveis: 30</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

